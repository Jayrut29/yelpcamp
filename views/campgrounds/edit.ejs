<% include ../partials/header %>

<div class="container">
    <div class="fluid">
        <h1 style="text-align: center">Edit <%=campgrounds.name%></h1>
        <div style="width:30%; margin: 0 auto">
           
            <form action="/campgrounds/<%= campgrounds._id %>?_method=PUT" method="POST">
        
                
                <div class="form-group">
                <input class="form-control" type="text" name="campground[name]" value="<%= campgrounds.name%>">
                </div>
                   <div class="form-group">
                <input class="form-control" type="text" name="campground[iurl]" value="<%= campgrounds.image%>">
                </div>
                  <div class="form-group">
                <input class="form-control" type="text" name="campground[description]" value="<%= campgrounds.description%>">
                </div>
                   <div class="form-group">
                <button class="btn btn-primary btn-lg" type="submit">Submit</button>
                
                </div>
                
            </form>
             <a href="/campgrounds">Explore all California Campgrounds</a>
        </div>
       
    </div>
</div>

<% include ../partials/footer %>